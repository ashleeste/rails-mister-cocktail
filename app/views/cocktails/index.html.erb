<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h1>Cocktail Menu</h1>
      <%= link_to "Add New cocktail", new_cocktail_path, class: "btn btn-danger"  %>
      <br>
      <br>
        <% @cocktails.each do |cocktail| %>
          <li>
            <%=cocktail.name%>
            <%= link_to("Select", cocktail_path(cocktail), {class: "btn btn-primary"})  %>
          </li>
      <% end %>

    </div>
  </div>
</div>


